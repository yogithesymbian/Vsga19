<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4101525"
        tools:context="com.scodeid.vsga19.ui.init.SplashActivity">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_splash"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_logo_scodeid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_label_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activitiy_splash_splash_screen"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/img_splash"
            app:layout_constraintStart_toStartOf="@+id/img_splash"
            app:layout_constraintTop_toBottomOf="@+id/img_splash" />

</androidx.constraintlayout.widget.ConstraintLayout>
